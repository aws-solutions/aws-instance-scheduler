{
  "compilerOptions": {
    "alwaysStrict": true,
    "charset": "utf8",
    "declaration": true,
    "experimentalDecorators": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": ["es2021", "dom"],
    "module": "CommonJS",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "stripInternal": true,
    "target": "ES2022",
    "allowJs": false,
    "outDir": "../../build/cdk.ts.dist"
  },
  "include": ["**/*.ts"],
  "files" : ["global.d.ts"],
  "exclude": ["node_modules"]
}
